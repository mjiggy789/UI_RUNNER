{
    "name": "parkour-bot-embed-service",
    "version": "1.0.0",
    "description": "Parkour bot embed service monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "services/*"
    ],
    "scripts": {
        "build": "node build.js",
        "predev:full": "lsof -ti :4000,4001,4002 | xargs kill -9 || true",
        "dev:full": "npm run build && concurrently --kill-others \"npx serve -l 4000 release\" \"PORT=4001 npx ts-node services/config-api/src/index.ts\" \"PORT=4002 npx ts-node services/telemetry/src/index.ts\"",
        "test:checksum": "npx ts-node --compiler-options '{\"module\":\"commonjs\"}' -r tsconfig-paths/register scripts/test-world-checksum.ts",
        "test:spatial": "npx ts-node --compiler-options '{\"module\":\"commonjs\"}' -r tsconfig-paths/register scripts/test-spatial-grid.ts",
        "test": "npm run test:checksum && npm run test:spatial"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "concurrently": "^9.2.1",
        "crypto": "^1.0.1",
        "esbuild": "^0.27.3",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "serve": "^14.2.5",
        "tsconfig-paths": "^4.2.0",
        "tweetnacl": "^1.0.3",
        "typescript": "^5.0.0"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
