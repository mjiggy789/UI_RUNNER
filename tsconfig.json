{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@parkour-bot/shared": [
                "packages/shared/src/index"
            ],
            "@parkour-bot/runtime/*": [
                "packages/runtime/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}